{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "declaration": true,
    "declarationMap": false,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "declarationDir": "./dist/types",
    "lib": [
      "dom",
      "esnext"
    ],
    "allowSyntheticDefaultImports": true,
    "removeComments": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}